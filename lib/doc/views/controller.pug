<!DOCTYPE html>
html(lang="fr")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title=`${controller.target.name} documentation`
		style
			include ../styles/out.css

	body(class="font-sans antialiased space-y-4 text-gray-800")
		header(class="p-3 bg-blue-400 shadow-md")
			span(class="text-xl")=`${controller.target.name} documentation`

		div(class="container mx-auto space-y-4 flex flex-col")
			each route in controller.routes
				- const methode = route.method
				case methode 
					when "GET"
						div(class="border-blue-500 border bg-blue-50 px-2 py-2 rounded-md shadow flex space-x-5")
							div(class="bg-blue-400 text-white rounded w-24 py-1 text-center font-semibold")=methode
							div(class="font-semibold my-auto")=`${controller.baseUrl}${route.path}`
							div(class="font-medium text-gray-400 my-auto flex-1")=`${route.description}`
							a(href=`${controller.target.name}/${route.key}` class="bg-indigo-400 text-white rounded w-24 py-1 text-center font-semibold") Voir

					when "POST"
						div(class="border-green-500 border bg-green-50 px-2 py-2 rounded-md shadow flex space-x-5")
							div(class="bg-green-400 text-white rounded w-24 py-1 text-center font-semibold")=methode
							div(class="font-semibold my-auto")=`${controller.baseUrl}${route.path}`
							div(class="font-medium text-gray-400 my-auto flex-1")=`${route.description}`
							a(href=`${controller.target.name}/${route.key}` class="bg-indigo-400 text-white rounded w-24 py-1 text-center font-semibold") Voir

					when "DELETE"
						div(class="border-red-500 border bg-red-50 px-2 py-2 rounded-md shadow flex space-x-5")
							div(class="bg-red-400 text-white rounded w-24 py-1 text-center font-semibold")=methode
							div(class="font-semibold my-auto")=`${controller.baseUrl}${route.path}`
							div(class="font-medium text-gray-400 my-auto flex-1")=`${route.description}`
							a(href=`${controller.target.name}/${route.key}` class="bg-indigo-400 text-white rounded w-24 py-1 text-center font-semibold") Voir

					when "PUT"
						div(class="border-yellow-500 border bg-yellow-50 px-2 py-2 rounded-md shadow flex space-x-5")
							div(class="bg-yellow-400 text-white rounded w-24 py-1 text-center font-semibold")=methode
							div(class="font-semibold my-auto")=`${controller.baseUrl}${route.path}`
							div(class="font-medium text-gray-400 my-auto flex-1")=`${route.description}`
							a(href=`${controller.target.name}/${route.key}` class="bg-indigo-400 text-white rounded w-24 py-1 text-center font-semibold") Voir

					when "PATCH"
						div(class="border-purple-500 border bg-purple-50 px-2 py-2 rounded-md shadow flex space-x-5")
							div(class="bg-purple-400 text-white rounded w-24 py-1 text-center font-semibold")=methode
							div(class="font-semibold my-auto")=`${controller.baseUrl}${route.path}`
							div(class="font-medium text-gray-400 my-auto flex-1")=`${route.description}`
							a(href=`${controller.target.name}/${route.key}` class="bg-indigo-400 text-white rounded w-24 py-1 text-center font-semibold") Voir

